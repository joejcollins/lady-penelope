{
	"name": "Python with UV",
	"image": "ghcr.io/joejcollins/lady-penelope-python:latest",
	// "build": {
	// 	"dockerfile": "Dockerfile"
	// },
	"hostRequirements": {
		"cpus": 4,
		"memory": "8gb"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": ".venv/bin/python",
				"python.terminal.activateEnvironment": true
			},
			"extensions": [
				"anweber.vscode-httpyac",
				"charliermarsh.ruff",
				"ms-toolsai.jupyter",
				"ms-python.python",
				"sourcery.sourcery",
				"tamasfe.even-better-toml"
			]
		}
	},
	"postCreateCommand": ". ./.devcontainer/python_post_create.sh | tee /tmp/post_create_log.txt"
}